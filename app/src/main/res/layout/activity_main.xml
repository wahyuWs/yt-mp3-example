<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Url Video :"/>
        
        <EditText
            android:id="@+id/edt_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@id/tv_url"/>

        <TextView
            android:id="@+id/tv_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quality Music"
            android:layout_marginTop="8dp"
            android:layout_below="@id/edt_url"/>
        
        <RadioGroup
            android:id="@+id/rb_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_quality"
            android:layout_below="@id/tv_quality"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="64"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/rb_128"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/rb_256"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="256"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/rb_192"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="192"
                android:onClick="onRadioButtonClicked"/>
            <RadioButton
                android:id="@+id/rb_320"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_below="@id/rb_group"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>